<a href="single-blog.html" class="p-card">
    <figure class="p-card__img p-card__img--<%= column%>">
        <img src="<%= blogList.src %>" alt="アイキャッチ画像">
    </figure>



    <div class="p-card__contents p-card__contents--<%= column%>">

        <h3 class="p-card__title p-card__title--<%= column%>">
            <%= blogList.title %>
        </h3>
        <p class="p-card__text">
            <%= blogList.text %>
        </p>
        <div class="p-card__meta">
            <p class="p-card__category">
                <%= blogList.category %>
            </p>
            <time class="p-card__date" datetime="<%= blogList.date %>">
                <%= blogList.date %>
            </time>
        </div>
    </div>
</a>